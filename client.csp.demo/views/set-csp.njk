{% extends "_base.njk" %}

{% block pageTitle %} - Set the CSP{% endblock %}

{% block body %}
Set your CSP below.

<form method="POST" action="/set-csp">

<ul style="list-style-type:none" id="directiveList">
  {% for directive in allDirectives %}
    <li><input name="use-{{ directive }}" type="checkbox"{% if currDirectives['use-' + directive] %}checked="checked"{% endif %} />{{ directive }}<input name="{{ directive }}" type="text" value="{% if currDirectives[directive] %}{{currDirectives[directive]}}{% endif %}"></li>
  {% endfor %}
</ul>
<button type="submit">Submit</button>
<div id="msg">{{ msg }}</div>
</form>
<script src="cspForm.js"></script>
{% endblock %}